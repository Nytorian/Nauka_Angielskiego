<%= form_for(lesson) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :level %>
    <%= f.text_field :level %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.text_field :image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  <div class="add-expression-container">
    <%= form_for :expressions do |e| %>
      <div class="field">
        <%= e.label :title %>
        <%= e.text_field :title %>
      </div>

      <div class="field">
        <%= e.label :english_sntnc %>
        <%= e.text_field :english_sntnc %>
      </div>

      <div class="field">
        <%= e.label :polish_sntnc %>
        <%= e.text_field :polish_sntnc %>
      </div>

      <div class="field">
        <%= e.label :image %>
        <%= e.text_field :image %>
      </div>

      <div class="actions">
        <%= e.submit %>
      </div>
    <% end %>
  <% end %>
</div>
